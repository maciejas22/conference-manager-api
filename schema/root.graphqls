directive @authenticated on FIELD_DEFINITION
directive @hasRole(role: Role!) on FIELD_DEFINITION

enum Order {
  ASC
  DESC
}

input Sort {
  column: String!
  order: Order!
}

input Page {
  number: Int!
  size: Int!
}

type PageInfo {
  totalItems: Int!
  totalPages: Int!
  number: Int!
  size: Int!
}
